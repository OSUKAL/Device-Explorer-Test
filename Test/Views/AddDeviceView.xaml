<UserControl x:Class="Test.View.AddDeviceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Test.View"
             xmlns:infrasrtucture="clr-namespace:Test.Infrastructure"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <infrasrtucture:EnumDescriptionConverter x:Key="DescriptionConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Background="RoyalBlue"
            Foreground="WhiteSmoke"
            FontSize="20"
            Padding="20 5"
            Text="Добавление нового устройства" />

        <Grid Grid.Row="1" Margin="20 15 20 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Text="Название" />
            <TextBox
                Grid.Row="1"
                Margin="0 5 0 0"
                Text="{Binding Name}" />
        </Grid>

        <Grid Grid.Row="2" Margin="20 5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Text="Серийный номер" />
            <TextBox
                Grid.Row="1"
                Margin="0 5 0 0"
                Text="{Binding SerialNumber}" />
        </Grid>

        <Grid Grid.Row="3" Margin="20 5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Категория" />
            <ComboBox
                Grid.Row="1"
                Grid.Column="0"
                Margin="0 5 0 0"
                Width="150"
                ItemsSource="{Binding DeviceCategories}"
                SelectedItem="{Binding Category, Converter={StaticResource DescriptionConverter}}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource DescriptionConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Margin="10 0 0 0"
                Text="Статус" />
            <ComboBox
                Grid.Row="1"
                Grid.Column="1"
                Margin="10 5 0 0"
                Width="150"
                ItemsSource="{Binding DeviceStatuses}"
                SelectedItem="{Binding Status, Converter={StaticResource DescriptionConverter}}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource DescriptionConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Margin="10 0 0 0"
                Text="Дата установки" />
            <DatePicker
                Grid.Row="1"
                Grid.Column="2"
                Margin="10 5 0 0"
                Width="150"
                SelectedDate="{Binding InstallationDate}" />
        </Grid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="20 20">
            <Button
                Content="Добавить устройство"
                Command="{Binding SubmitCommand}" />
            <Button
                Margin="10 0 0 0"
                Content="Отмена"
                Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</UserControl>